div(ng-controller='NewCommentCtrl')
  form(name='commentForm', role='form', novalidate)
    div(class='input-group')
      input(type='text', class='form-control', maxlength='200', ng-model='comment', placeholder='New comment...', required)
      span(class='input-group-btn')
        button(class='btn btn-primary', type='button', ng-disabled='commentForm.$invalid' ng-click='sendComment(post.id)') Send
