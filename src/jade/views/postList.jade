div(class='row')
  div(class='col-md-12')
    label(for='orderingDropdown') Sort posts:
    span(class='dropdown', id='orderingDropdown', dropdown on-toggle='toggled(open)')
      a(href class='dropdown-toggle', dropdown-toggle)  {{ order.description }}
      ul(class='dropdown-menu')
        li(ng-repeat='choice in items')
          a(ng-click='select(choice)'){{ choice.description }}
div(class='row')
  div(class='col-xs-12')
    div(class='item' ng-repeat='post in posts')
      a(ng-click='openModal(post.image.file)')
        img(ng-src="{{post.image.thumbnail}}")
      h4
        a(ng-href='#/details/{{post.username}}', class='media-heading') {{post.username}} 
        small
          p {{post.created | date:'medium'}}
      hr
      p {{post.description}}
      p
      a(href="#/posts/{{post.id}}") Details
